generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id                    String            @id @default(cuid())
  clerkOrganizationId   String            @unique
  name                  String
  linearApiKeyEncrypted String?           // Encrypted Linear API key
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  engineers             Engineer[]
  productManagers       ProductManager[]
  productDesigners      ProductDesigner[]
  cycles                Cycle[]
  pitches               Pitch[]
}

model Engineer {
  id             String                  @id @default(cuid())
  organization   Organization?           @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String?
  name           String
  email          String?
  active         Boolean                 @default(true)
  createdAt      DateTime                @default(now())
  updatedAt      DateTime                @updatedAt
  capacities     EngineerCycleCapacity[]
  assignments    Assignment[]
  leadingPods    Pod[]

  @@unique([organizationId, name])
  @@unique([organizationId, email])
}

model ProductManager {
  id             String        @id @default(cuid())
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String?
  name           String
  email          String?
  active         Boolean       @default(true)
  pitches        Pitch[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@unique([organizationId, name])
  @@unique([organizationId, email])
}

model ProductDesigner {
  id             String        @id @default(cuid())
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String?
  name           String
  email          String?
  active         Boolean       @default(true)
  pitches        Pitch[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@unique([organizationId, name])
  @@unique([organizationId, email])
}

model Cycle {
  id             String                  @id @default(cuid())
  organization   Organization?           @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String?
  name           String
  startDate      DateTime
  endDate        DateTime
  description    String?
  createdAt      DateTime                @default(now())
  updatedAt      DateTime                @updatedAt
  pitches        Pitch[]                 @relation("CyclePitches")
  bettingPitches Pitch[]                 @relation("BettingPitches")
  pods           Pod[]
  capacities     EngineerCycleCapacity[]
  assignments    Assignment[]
}

model Pod {
  id        String    @id @default(cuid())
  name      String
  cycle     Cycle     @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  cycleId   String
  leader    Engineer? @relation(fields: [leaderId], references: [id], onDelete: SetNull)
  leaderId  String?
  sortOrder Int       @default(0)
  pitches   Pitch[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model EngineerCycleCapacity {
  id             String   @id @default(cuid())
  engineer       Engineer @relation(fields: [engineerId], references: [id], onDelete: Cascade)
  engineerId     String
  cycle          Cycle    @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  cycleId        String
  availableWeeks Decimal
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([engineerId, cycleId])
}

model Pitch {
  id                String           @id @default(cuid())
  organization      Organization?    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId    String?
  cycle             Cycle?           @relation("CyclePitches", fields: [cycleId], references: [id], onDelete: SetNull)
  cycleId           String?
  bettingCycle      Cycle?           @relation("BettingPitches", fields: [bettingCycleId], references: [id], onDelete: SetNull)
  bettingCycleId    String?
  bettingRejected   Boolean          @default(false)
  pod               Pod?             @relation(fields: [podId], references: [id], onDelete: SetNull)
  podId             String?
  productManager    ProductManager?  @relation(fields: [productManagerId], references: [id], onDelete: SetNull)
  productManagerId  String?
  productDesigner   ProductDesigner? @relation(fields: [productDesignerId], references: [id], onDelete: SetNull)
  productDesignerId String?
  title             String
  pitchDocUrl       String?
  linearProjectId   String?          // Linear project ID for future sync/updates
  estimateWeeks     Decimal          @default(0)
  status            String           @default("PLANNED")
  priority          Int?
  notes             String?
  assignments       Assignment[]
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

model Assignment {
  id             String   @id @default(cuid())
  cycle          Cycle    @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  cycleId        String
  engineer       Engineer @relation(fields: [engineerId], references: [id], onDelete: Cascade)
  engineerId     String
  pitch          Pitch    @relation(fields: [pitchId], references: [id], onDelete: Cascade)
  pitchId        String
  weeksAllocated Decimal
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([cycleId, engineerId, pitchId])
}

// PitchStatus values: BACKLOG, PLANNING, READY_FOR_DEV, COMPLETE, CANCELED

model PitchSignup {
  id                  String   @id @default(cuid())
  cycleId             String
  personName          String
  firstChoicePitchId  String
  secondChoicePitchId String
  thirdChoicePitchId  String
  createdAt           DateTime @default(now())
}
