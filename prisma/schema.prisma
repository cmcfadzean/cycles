generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Engineer {
  id          String                  @id @default(cuid())
  name        String                  @unique
  email       String?                 @unique
  active      Boolean                 @default(true)
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  capacities  EngineerCycleCapacity[]
  assignments Assignment[]
  leadingPods Pod[]
}

model ProductManager {
  id        String   @id @default(cuid())
  name      String   @unique
  email     String?  @unique
  active    Boolean  @default(true)
  pitches   Pitch[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductDesigner {
  id        String   @id @default(cuid())
  name      String   @unique
  email     String?  @unique
  active    Boolean  @default(true)
  pitches   Pitch[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cycle {
  id          String                  @id @default(cuid())
  name        String
  startDate   DateTime
  endDate     DateTime
  description String?
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  pitches     Pitch[]
  pods        Pod[]
  capacities  EngineerCycleCapacity[]
  assignments Assignment[]
}

model Pod {
  id        String   @id @default(cuid())
  name      String
  cycle     Cycle    @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  cycleId   String
  leader    Engineer? @relation(fields: [leaderId], references: [id], onDelete: SetNull)
  leaderId  String?
  pitches   Pitch[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EngineerCycleCapacity {
  id             String   @id @default(cuid())
  engineer       Engineer @relation(fields: [engineerId], references: [id], onDelete: Cascade)
  engineerId     String
  cycle          Cycle    @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  cycleId        String
  availableWeeks Decimal
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([engineerId, cycleId])
}

model Pitch {
  id                String           @id @default(cuid())
  cycle             Cycle?           @relation(fields: [cycleId], references: [id], onDelete: SetNull)
  cycleId           String?
  pod               Pod?             @relation(fields: [podId], references: [id], onDelete: SetNull)
  podId             String?
  productManager    ProductManager?  @relation(fields: [productManagerId], references: [id], onDelete: SetNull)
  productManagerId  String?
  productDesigner   ProductDesigner? @relation(fields: [productDesignerId], references: [id], onDelete: SetNull)
  productDesignerId String?
  title             String
  pitchDocUrl       String?
  estimateWeeks     Decimal          @default(0)
  status            String           @default("PLANNED")
  priority          Int?
  notes             String?
  assignments       Assignment[]
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

model Assignment {
  id             String   @id @default(cuid())
  cycle          Cycle    @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  cycleId        String
  engineer       Engineer @relation(fields: [engineerId], references: [id], onDelete: Cascade)
  engineerId     String
  pitch          Pitch    @relation(fields: [pitchId], references: [id], onDelete: Cascade)
  pitchId        String
  weeksAllocated Decimal
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([cycleId, engineerId, pitchId])
}

